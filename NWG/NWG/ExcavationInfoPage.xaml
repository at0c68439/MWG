                                Text="Awaiting Backfill"
                                TextColor="{Binding AwaitinglabelColor}">
                                 <Label.GestureRecognizers>
                          <TapGestureRecognizer Tapped="OnAwaitinglabelTapped"/>
                          </Label.GestureRecognizers>
                                </Label>
