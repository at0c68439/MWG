<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="NWG.ExcavationInfoPage"
    Title="New Activity">
    <ContentPage.ToolbarItems>
     <ToolbarItem  Icon="Logout.png" Priority="0" Clicked="Logout_Button_Clicked"  />
   </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout x:Name="RootLayout"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Orientation="Vertical"
            BackgroundColor="White">
            <ScrollView Orientation="Vertical"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                BackgroundColor="#F3F3F3">
                <StackLayout x:Name="MainLayout"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Orientation="Vertical"
                    Margin="5,5,5,0">
                    
                    <StackLayout x:Name="LocationLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="LocationLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Location" 
                            TextColor="#185FA5"/>
                        <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Label  x:Name="LocationEntry"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                            <Image Source="arrow_hdpi"
                                HorizontalOptions="End"
                                VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLocationTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                    <StackLayout x:Name="ColourLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="ColourLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Colour"
                            TextColor="#185FA5"/>
                         <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                           <Label  x:Name="ColourSelect"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                            <Image Source="arrow_hdpi"
                                HorizontalOptions="End"
                                VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnColourChooseTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>            
                     </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="LengthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="LengthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Length (m)"
                            TextColor="#185FA5"/>
                        <Entry
                           x:Name="LengthEntry"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="CenterAndExpand"
                           HorizontalTextAlignment="End"
                           TextColor="Black" 
                           WidthRequest="130"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="WidthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="WidthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Width (m)"
                            TextColor="#185FA5"/>
                        <Entry
                           x:Name="WidthEntry"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="CenterAndExpand"
                           HorizontalTextAlignment="End"
                           TextColor="Black" 
                           WidthRequest="130"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="DepthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="DepthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Depth (m)"
                            TextColor="#185FA5"/>
                        <Entry
                           x:Name="DepthEntry"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="CenterAndExpand"
                           HorizontalTextAlignment="End"
                           TextColor="Black" 
                           WidthRequest="130"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                    <StackLayout 
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="StatusLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Status" 
                            TextColor="#185FA5"/>
                        <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Label  x:Name="StatusSelect"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                            <Image Source="arrow_hdpi"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>   
                         <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStatusTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>

                       <!-- <StackLayout x:Name="StatusContent1" Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
