                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>>-->
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                     <StackLayout 
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="FillAndExpand"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SurfaceLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Surface"
                            TextColor="#185FA5"/>
                        <Label  x:Name="SurfaceSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Surface"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSurfaceSelectTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>
                    <StackLayout x:Name="PublicLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="PublicLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Public/Private"
                            TextColor="#185FA5"/>
                         <Label  x:Name="PublicSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Public/Private"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPublicOrPrivateTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="SiteLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SiteLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Is site cleared"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SiteButton"
                            HorizontalOptions="End"></Switch>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                     <StackLayout x:Name="SpoilLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SpoilLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Is spoil removed"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SpoilButton"
                            HorizontalOptions="End"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                       <StackLayout x:Name="CommentsLayout"  Spacing="30"  
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Vertical"
                        >
                        <StackLayout Orientation="Horizontal">
                        <Label  
                            x:Name="CommentsLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Comments"
                            TextColor="#185FA5"/>
                            </StackLayout>
                        <Editor x:Name="comments" HeightRequest="100" Text="" VerticalOptions="FillAndExpand" />
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                     <StackLayout x:Name="MaterialLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="MaterialLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Material description"
                            TextColor="#185FA5"/>

                        <Label  x:Name="MaterialSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Material"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaterialSelectTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="CaptureImageLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="ImageLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Capture Image"
                            TextColor="#185FA5"/>
                         <Button Text="View Image"  Clicked="ViewImage_Clicked" VerticalOptions="Center" HorizontalOptions="Center" />

                        <Image x:Name="CameraImage" Source="Camera" WidthRequest="20"   HeightRequest="20"  HorizontalOptions="EndAndExpand" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCameraTapped"/>
                        </Image.GestureRecognizers>
                            </Image>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                   <StackLayout x:Name="GeoLocationLayout"  
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5"
                        Orientation="Horizontal">
                        <Label 
                            x:Name="GeoLocationLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Geo Location"
                            TextColor="#185FA5"/>
                         <Label 
                            x:Name="GeoLocation"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            TextColor="#185FA5"/>
                        
                           <Image
                            x:Name="GeoLocationEntry"
                            Source="Geolocation"
                            HorizontalOptions="End"
                            WidthRequest="20"
                            HeightRequest="20"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5" Clicked="CurrentLocation_Clicked"/>
                    </StackLayout>
                    
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>
               </StackLayout>
            </ScrollView>

            <StackLayout Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="20,10,20,10">
                <Button Text="Cancel"
                    x:Name="CancelButton"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Center"
                    TextColor="#57C091"
                    BackgroundColor="White"
                    BorderColor="#57C091"
                    WidthRequest="150" />
                <Button Text="Submit"
                    x:Name="SubmitButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    BackgroundColor="#185FA5"
                    BorderColor="White"
                    BorderWidth="1"
                    BorderRadius="0"
                    WidthRequest="150" Clicked="OnSubmitClicked"/>
            </StackLayout>
      </StackLayout>
    </ContentPage.Content>
</ContentPage>
