<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="NWG.ExcavationInfoPage">
	<ContentPage.Content>
        <StackLayout x:Name="RootLayout"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Orientation="Vertical"
            BackgroundColor="White">
            <ScrollView Orientation="Vertical"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                BackgroundColor="#F3F3F3">
                <StackLayout x:Name="MainLayout"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Orientation="Vertical"
                    Margin="5,5,5,0">
                    <StackLayout x:Name="LocationLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="LocationLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Location" 
                            TextColor="#185FA5"/>

                        <Label  x:Name="LocationEntry"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Location"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLocationTapped"/>
                        </Label.GestureRecognizers>
                        </Label>

                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                    <StackLayout x:Name="ColourLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="ColourLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Colour"
                            TextColor="#185FA5"/>
                       <Label  x:Name="ColourSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Color"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnColourChooseTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="LengthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="LengthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Length (m)"
                            TextColor="#185FA5"/>
                        <Entry
                            x:Name="LengthEntry"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            TextColor="#185FA5" WidthRequest="150"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="WidthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="WidthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Width (m)"
                            TextColor="#185FA5"/>
                        <Entry
                            x:Name="WidthEntry"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            TextColor="#185FA5" WidthRequest="150"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="DepthLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="DepthLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Depth (m)"
                            TextColor="#185FA5"/>
                      <Entry
                            x:Name="DepthEntry"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            TextColor="#185FA5" WidthRequest="150"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="StatusLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Vertical">
                        
                        <Label x:Name="StatusLabel"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            Text="Status"
                            TextColor="#185FA5"/>
                        
                        <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            Margin="0,0,0,0">

                            <Label  x:Name="Completelabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Complete"
                            TextColor="{Binding CompleteColor}">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCompleteTapped"/>
                        </Label.GestureRecognizers>
                        </Label>

                            <Label  x:Name="TemproraryLabel"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center"
                            Text="Temprorary Backfill"
                            TextColor="{Binding TemporaryLabelColor}">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTemporaryLabelTapped"/>
                        </Label.GestureRecognizers>
                        </Label>

                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            
                            <Label  x:Name="Awaitinglabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Awaiting Backfill"
                            TextColor="{Binding AwaitinglabelColor}">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAwaitinglabelTapped"/>
                        </Label.GestureRecognizers>
                        </Label>

                            <Label  x:Name="BackfilledLabel"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="Backfilled"
                            TextColor="{Binding BackfilledLabelColor}">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackfilledLabelTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                            
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="SurfaceLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SurfaceLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Surface"
                            TextColor="#185FA5"/>
                        <Label  x:Name="SurfaceSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Surface"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaterialSelectTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                        
                        <Label
                            x:Name="SurfaceEntry"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="PublicLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="PublicLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Public/Private"
                            TextColor="#185FA5"/>
                        <Label
                            x:Name="PublicEntry"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="SiteLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SiteLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Is site cleared"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SiteButton"
                            HorizontalOptions="End"></Switch>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                     <StackLayout x:Name="SpoilLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SpoilLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Is spoil removed"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SpoilButton"
                            HorizontalOptions="End"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    <StackLayout x:Name="CommentsLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="CommentsLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Comments"
                            TextColor="#185FA5"/>
                        <Label
                            x:Name="CommentsEntry"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                     <StackLayout x:Name="MaterialLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="MaterialLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Material description"
                            TextColor="#185FA5"/>

                        <Label  x:Name="MaterialSelect"
                            HorizontalOptions="EndAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center" Text="Choose Material"
                            TextColor="#185FA5">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMaterialSelectTapped"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="CaptureImageLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="ImageLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Capture Image"
                            TextColor="#185FA5"/>
                        <Label
                            x:Name="ImageEntry"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="GeoLocationLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="GeoLocationLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Geo Location"
                            TextColor="#185FA5"/>
                        <Label
                            x:Name="GeoLocationEntry"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            TextColor="#185FA5"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>
               </StackLayout>
            </ScrollView>

            <StackLayout Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="20,10,20,10">
                <Button Text="Cancel"
                    x:Name="CancelButton"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Center"
                    TextColor="#57C091"
                    BackgroundColor="White"
                    BorderColor="#57C091"
                    WidthRequest="150" Clicked="OnSubmitClicked"/>
                <Button Text="Submit"
                    x:Name="SubmitButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    BackgroundColor="#185FA5"
                    BorderColor="White"
                    BorderWidth="1"
                    BorderRadius="0"
                    WidthRequest="150"/>
            </StackLayout>
      </StackLayout>
	</ContentPage.Content>
</ContentPage>
