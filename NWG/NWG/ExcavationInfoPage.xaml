                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                    <StackLayout 
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SurfaceDispaly"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Surface" 
                            TextColor="#185FA5"/>
                       <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                           <Label  x:Name="SurfaceSelect"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                          <Image Source="arrow_hdpi"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>                             
                            <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSurfaceSelectTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>                                        
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                    <StackLayout x:Name="PublicLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="PublicLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Public/Private"
                            TextColor="#185FA5"/>                        
                        <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                           <Label  x:Name="PublicSelect"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                          <Image Source="arrow_hdpi"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPublicOrPrivateTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                    <StackLayout x:Name="SiteLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SiteLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Site cleared?"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SiteButton"
                            HorizontalOptions="End"></Switch>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                     <StackLayout x:Name="SpoilLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="SpoilLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Spoil removed?"
                            TextColor="#185FA5"/>
                        <Switch x:Name="SpoilButton"
                            HorizontalOptions="End"/>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                    
                       <StackLayout x:Name="CommentsLayout"
                        Spacing="30"  
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Vertical">                      
                            <Label  
                                x:Name="CommentsLabel"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Text="Comments"
                                TextColor="#185FA5"/>
                           
                            <Editor x:Name="comments" 
                                HeightRequest="100" 
                                Text="" TextColor="Black" 
                                VerticalOptions="FillAndExpand" />
                        </StackLayout>                   
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                     <StackLayout x:Name="MaterialLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="MaterialLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Material description"
                            TextColor="#185FA5"/>                        
                       <StackLayout Orientation="Horizontal"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                           <Label  x:Name="MaterialSelect"
                                HorizontalOptions="EndAndExpand"
                                VerticalOptions="CenterAndExpand"
                                HorizontalTextAlignment="Center" 
                                Text=""
                                TextColor="Black"/>
                          <Image Source="arrow_hdpi"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                            <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMaterialSelectTapped"/>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>


                 <StackLayout x:Name="CaptureImageLayout"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5,5,5,5"
                        Orientation="Horizontal">
                        <Label
                            x:Name="ImageLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Images"
                            TextColor="#185FA5" />

                        <Label
                            x:Name="CaptureImage"
                            HorizontalOptions = "EndAndExpand"
                            VerticalOptions="Center"
                            Text="Capture"
                            TextColor="Black" Margin="5,0,15,0">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped = "OnCameraTapped" />
                        </Label.GestureRecognizers >
                        </Label >

                        <Label
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            Text="View"
                            TextColor="Black" Margin="5,0,0,0">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ViewImage_Clicked"/>
                        </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>
                
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>

                   <StackLayout x:Name="GeoLocationLayout"  
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Start"
                        Padding="5"
                        Orientation="Horizontal">
                        <Label 
                            x:Name="GeoLocationLabel"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Text="Geo Location"
                            TextColor="#185FA5"/>
                         <Label 
                            x:Name="GeoLocation"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand"
                            TextColor="Black" Margin="0,0,5,0"/>
                   
                      <Image
                            x:Name="GeoLocationEntry"
                            Source="Geolocation"
                            HorizontalOptions="End"
                            WidthRequest="20"
                            HeightRequest="20">
                             <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="CurrentLocation_Clicked"/>
                        </Image.GestureRecognizers>
                            </Image>
                    </StackLayout>
                    
                    <StackLayout HeightRequest="1"             
                        BackgroundColor="Gray"
                        Opacity="0.5"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Vertical"/>
               </StackLayout>
            </ScrollView>

            <StackLayout Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="20,10,20,10">
                <Button Text="Cancel"
                    x:Name="CancelButton"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Center"
                    TextColor="#57C091"
                    BackgroundColor="White"
                    BorderColor="#57C091"
                    WidthRequest="150" Clicked="OnCancelClicked"/>
                <Button Text="Submit"
                    x:Name="SubmitButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="White"
                    BackgroundColor="#185FA5"
                    BorderColor="White"
                    BorderWidth="1"
                    BorderRadius="0"
                    WidthRequest="150" Clicked="OnSubmitClicked"/>
            </StackLayout>
      </StackLayout>
    </ContentPage.Content>
</ContentPage>